{
  "name": "clawcraft",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "node:prep": "node -e \"const fs=require('node:fs'); fs.mkdirSync('.tmp/node-tests',{recursive:true}); fs.writeFileSync('.tmp/node-tests/package.json', JSON.stringify({type:'commonjs'}));\"",
    "test:node": "tsc -p tsconfig.node-tests.json && npm run node:prep && node --test .tmp/node-tests/**/*.test.js",
    "test": "npm run test:node",
    "dev:seed": "node scripts/dev/seed.mjs",
    "dev:demo:reset": "node scripts/dev/demo-reset.mjs",
    "dev:smoke": "node scripts/dev/smoke.mjs",
    "dev:demo": "node scripts/dev/demo.mjs",
    "dev:llm": "node scripts/dev/llm-smoke.mjs",
    "dev:llm:status": "node scripts/dev/llm-status.mjs",
    "dev:llm:quest": "node scripts/dev/llm-quest.mjs",
    "dev:parity:screenshots": "node scripts/dev/parity-snapshots.mjs",
    "dev:a11y": "node scripts/dev/a11y-audit.mjs",
    "dev:sr": "node scripts/dev/sr-smoke.mjs",
    "dev:perf:world-state": "node scripts/dev/perf-world-state.mjs",
    "dev:perf:map-render": "node scripts/dev/perf-map-render.mjs",
    "dev:jobs": "node scripts/dev/jobs.mjs",
    "sim:smoke": "tsc -p tsconfig.node-tests.json && npm run node:prep && node .tmp/node-tests/lib/sim/smoke.js"
  },
  "dependencies": {
    "@pixi/react": "^7.1.2",
    "@prisma/client": "^5.18.0",
    "@tanstack/react-query": "^5.59.16",
    "framer-motion": "^11.3.30",
    "next": "^16.1.6",
    "pixi.js": "^8.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.1.6",
    "playwright": "^1.58.1",
    "postcss": "^8.4.47",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.8.0"
  }
}
